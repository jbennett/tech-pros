<div onclick="location.href=#" class="block shadow-md mb-6 rounded overflow-hidden bg-white cursor-pointer">
  <div class="flex flex-col">
    <h2 class="text-xl text-center font-bold"><%= profile.name %></h2>

    <%= content_tag :div, profile.short_description, class: 'mx-2 my-4' unless profile.short_description.blank? %>
    
    <div class="m-2 flex items-baseline">
      <%= render partial: 'tag', collection: profile.tags %>

      <%= content_tag :div, profile.looking_for, class: 'ml-auto px-4 py-1 bg-red-400 text-white' unless profile.looking_for.blank? %>
    </div>

    <div class="flex">
      <%= render partial: 'contact', collection: profile.contact_methods %>
    </div>
  </div>
</div>