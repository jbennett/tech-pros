<div onclick="location.href='<%= profile_path(profile) %>';" class="block shadow-md mb-6 rounded overflow-hidden bg-white cursor-pointer">
  <div class="flex flex-col">
    <div class="mt-2 mb-4 flex justify-center items-center">
      <h2 class="text-2xl font-bold"><%= profile.name %></h2>

      <%= content_tag :div, profile.looking_for, class: 'ml-2 px-2 py-1 rounded-full bg-gray-400 text-xs text-gray-800' unless profile.looking_for.blank? %>
    </div>

    <%= content_tag :div, profile.short_description, class: 'mx-4 mb-4' unless profile.short_description.blank? %>
    
    <% unless profile.tags.blank? %>
      <div class="mx-2 mb-3 flex flex-wrap items-baseline justify-center">
        <%= render partial: 'tag', collection: profile.tags %>
      </div>
    <% end %>

    <% unless profile.contact_methods.blank? %>
      <div class="flex">
        <%= render partial: 'contact', collection: profile.contact_methods %>
      </div>
    <% end %>
  </div>
</div>